{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "xo",
        "plugin:vue/vue3-essential"
    ],
    "overrides": [
        {
            "extends": [
                "xo-typescript"
            ],
            "files": [
                "*.ts",
                "*.tsx"
            ],
            "excludedFiles": ["vite.config.ts","*.d.ts"]
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "@typescript-eslint/ban-types": "off"
    },
    "ignorePatterns": ["node_modules/", "dist/", "webpack.config.js", "babel.config.js","vite.config.ts","tsconfig.node.json","tsconfig.json"]

}
